set $mod Mod4
set $mod2 Mod1

set $cont control
bindsym $cont+Return exec urxvt
bindsym $cont+Shift+q kill

assign [class="Chromium"] www
assign [class="URxvt"] term
assign [class="Pcmanfm"] fm
assign [class="^URxvt$" instance="^cmus$"] media
assign [class="Exaile"] media
assign [class="Skype"] im
assign [class="Gvim"] dev
assign [class="Deluge"] torrents

for_window [class="Alarm-clock-applet"] floating enable

bindsym Pause exec ~/.i3/toggle-mute.sh
bindsym $mod+F12 exec share
bindsym $mod+F11 exec restart-inet

bindsym $mod2+Home exec sudo sudo s2disk
bindsym $mod2+End exec sudo reboot
bindsym $mod2+Delete exec sudo xscreensaver-command -lock
bindsym $mod2+Insert exec sudo xscreensaver-command -activate

bindsym $mod2+b exec chromium
bindsym $mod2+c exec pcmanfm
bindsym $mod2+v exec deluge
bindsym $mod2+z exec skype --disable-cleanlooks -style GTK
bindsym $mod2+Shift+z exec killall skype

bindsym $mod2+a exec xkb-switch -s us
bindsym $mod2+s exec xkb-switch -s ua
bindsym $mod2+d exec xkb-switch -s ru

bindsym $mod2+f exec ~/.i3/volume.sh down
bindsym $mod2+g exec ~/.i3/volume.sh up 

bindsym $mod2+1 exec ~/.i3/volume.sh set 10
bindsym $mod2+2 exec ~/.i3/volume.sh set 20
